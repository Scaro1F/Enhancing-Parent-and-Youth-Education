<title>Comment Box</title>
<style>
    /* Style for the comment box */
    #commentBox {
        width: 300px;
        height: 150px;
        resize: none;
    }
    /* Style for the saved comments */
    #savedComments {
        margin-top: 20px;
    }
</style>
</head>
<body>
    <h2>Leave a Review</h2>
    <!-- Comment box form -->
    <form id="commentForm">
        <textarea id="commentBox" placeholder="Write your comment here..."></textarea><br>
        <!-- Button to submit the comment -->
        <button type="submit">Submit</button>
    </form>

    <!-- Display area for submitted comments -->
    <div id="savedComments">
        <!-- Saved comments will be displayed here -->
    </div>

    <script>
        // Function to save comment
        function saveComment(event) {
            event.preventDefault(); // Prevent form submission
            var comment = document.getElementById("commentBox").value; // Get the comment
            var savedComments = document.getElementById("savedComments");
            var commentElement = document.createElement("p"); // Create a paragraph element for the comment
            commentElement.textContent = comment; // Set the text content of the paragraph to the comment
            savedComments.appendChild(commentElement); // Append the comment paragraph to the saved comments div
            document.getElementById("commentForm").reset(); // Reset the form
        }

        // Add event listener to the form for submitting comments
        document.getElementById("commentForm").addEventListener("submit", saveComment);
    </script>


   </section>
















